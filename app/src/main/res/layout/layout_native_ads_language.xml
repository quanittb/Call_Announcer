<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ad_unit_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_native_ads_round_corner_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ad_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_native_ads_top_left_icon_10sdp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_7sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="Ad"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10ssp" />


        <LinearLayout
            android:layout_below="@id/tv_ad_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dip">


                <ImageView
                    android:id="@+id/ad_app_icon"
                    android:layout_width="52dip"
                    android:layout_height="52dip"
                    android:adjustViewBounds="true"
                    android:src="@color/color_button" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ad_headline"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_semibold"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/color_button_ads"
                            android:text="hello"
                            android:textSize="@dimen/_13ssp"
                           />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/ad_advertiser"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start"
                            android:paddingVertical="@dimen/_3sdp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=" dÃ¡ dsa dddddddddddddddddddddddddddddddsa ds a dsads ad sad sa"
                            android:textColor="@color/color_native_ads_description"
                            android:textSize="@dimen/_11ssp"
                     />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_3sdp">

                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="2"
                    android:text="@string/appbar_scrolling_view_behavior"
                    android:textColor="@color/color_description_text"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="normal" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <com.google.android.gms.ads.nativead.MediaView
                    android:id="@+id/ad_media"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ad_call_to_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardBackgroundColor="@color/color_button_ads"
                android:layout_gravity="center"
                android:gravity="center"
                app:strokeWidth="0dp"
                android:layout_marginVertical="@dimen/_7sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:paddingVertical="@dimen/_6sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Install"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:drawableRight="@drawable/ic_download"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textStyle="bold"
                 />


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>



    </RelativeLayout>


</com.google.android.gms.ads.nativead.NativeAdView>