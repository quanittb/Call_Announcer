<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="style_description">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_description_text</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Theme_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

    </style>
    <style name="text_home" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>

    </style>
    <style name="style_content_call_announcer" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="style_item_setting" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="style_content_setting" >
        <item name="android:textColor">#66707A</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="style_content_call_announcer_1" >
        <item name="android:textColor">#66707A</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="style_onboarding_title">
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">-4sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_onbaording_description">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>

    </style>
</resources>